{% extends 'base.html.twig' %}

{% block title %}Редактирование расписания{% endblock %}

{% block body %}

<div>
    <a href="{{ path('panel_groups') }}">Вернуться к группам</a>
</div>

<div>

    <form id="schedule-form" action="{{ path('save_schedule', { group_id: group_id }) }}" method="POST">
    <input type="hidden" id="deleted_lessons" name="deleted_lessons" value="">
    {% set days = ['Понедельник', 'Вторник', 'Среда', 'Четверг', 'Пятница', 'Суббота'] %}
    
    <h1>Редактирование расписания группы</h1>
    {% for dayNumber in 1..6 %}
    <div>
        <h2>{{ days[dayNumber - 1] }}</h2>
        <table data-day-number="{{ dayNumber }}">
            <thead>
                <tr>
                    <th>Время начала</th>
                    <th>Время окончания</th>
                    <th>Название урока</th>
                    <th>Кабинет</th>
                    <th>Учитель</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                {% for lesson in lessonsData[dayNumber] ?? [] %}
                    <tr data-lesson-id="{{ lesson.id }}">
                        <td><input type="time" name="lessons[{{ dayNumber }}][start_time][]" value="{{ lesson.startTime|date('H:i') }}" required></td>
                        <td><input type="time" name="lessons[{{ dayNumber }}][end_time][]" value="{{ lesson.endTime|date('H:i') }}" required></td>
                        <td>
                            <select name="lessons[{{ dayNumber }}][id][]" required>
                                <option value="" disabled {{ lesson.subjectId is not defined ? 'selected' }}>Выберите предмет</option>
                                {% for subject in lessons %}
                                    <option value="{{ subject.id }}" {{ subject.id == lesson.subjectId ? 'selected' }}> 
                                        {{ subject.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </td>
                        <td><input type="text" name="lessons[{{ dayNumber }}][cabinet][]" value="{{ lesson.cabinet }}" required></td>
                        <td><input type="text" name="lessons[{{ dayNumber }}][teacher][]" value="{{ lesson.teacher }}" required></td>
                        <td><button type="button" >Удалить</button></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <button type="button" data-day-number="{{ dayNumber }}">+ Добавить урок</button>
    </div>
    {% endfor %}
    <button type="submit">Сохранить расписание</button>
</form>

</div>



<input type="hidden" id="deleted_lessons" name="deleted_lessons" value="">

<script>
    const lessonsList = {{ lessons|json_encode|raw }};
</script>


<script>
document.addEventListener('DOMContentLoaded', () => {
    // Переменная для хранения ID удаленных уроков
    const deletedLessonsInput = document.getElementById('deleted_lessons');
    const deletedLessons = [];

    // Добавляем обработчики для существующих кнопок "Удалить"
    document.querySelectorAll('.delete-row-btn').forEach(button => {
        button.addEventListener('click', () => {
            const row = button.closest('tr');
            const lessonId = row.dataset.lessonId; // Получаем ID урока, если есть
            if (lessonId) {
                deletedLessons.push(lessonId); // Добавляем ID в массив
                deletedLessonsInput.value = JSON.stringify(deletedLessons); // Обновляем скрытое поле
            }
            row.remove(); // Удаляем строку из таблицы
        });
    });

    // Добавляем обработчики для кнопок "Добавить урок"
    document.querySelectorAll('.add-lesson-btn').forEach(button => {
        button.addEventListener('click', () => {
            const dayTable = document.querySelector(`.day-table[data-day-number="${button.getAttribute('data-day-number')}"] tbody`);
            const row = document.createElement('tr');

            // Генерация опций для select
            const options = lessonsList.map(lesson => `<option value="${lesson.id}">${lesson.name}</option>`).join('');

            row.innerHTML = `
                <td><input type="time" name="lessons[${button.getAttribute('data-day-number')}][start_time][]" required></td>
                <td><input type="time" name="lessons[${button.getAttribute('data-day-number')}][end_time][]" required></td>
                <td>
                    <select name="lessons[${button.getAttribute('data-day-number')}][id][]" required>
                        <option value="" disabled selected>Выберите предмет</option>
                        ${options}
                    </select>
                </td>
                <td><input type="text" name="lessons[${button.getAttribute('data-day-number')}][cabinet][]" required></td>
                <td><input type="text" name="lessons[${button.getAttribute('data-day-number')}][teacher][]" required></td>
                <td><button type="button">Удалить</button></td>
            `;
            dayTable.appendChild(row);

            row.querySelector('.delete-row-btn').addEventListener('click', () => {
                row.remove();
            });
        });
    });

});
</script>




{% endblock %}
