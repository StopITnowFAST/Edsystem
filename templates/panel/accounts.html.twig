{# templates/panel/accounts.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Панель управления{% endblock %}

{% block body %}

<div>
    <a href="{{ path('app_panel') }}">Вернуться в панель</a>
</div>

<h1>Выбор студентов и пользователей</h1>

<form action="{{ path('panel_accounts') }}" method="POST">
    <div>
        <div>
            <label for="student">Выберите студента:</label>
            <select name="student" id="student">
                {% for student in students %}
                    <option value="{{ student.id }}">{{ student.firstName }} {{ student.middleName }} {{ student.lastName }}</option>
                {% endfor %}
            </select>
            <label for="user">Выберите пользователя:</label>
            <select name="user" id="user">
                {% for user in uniqueUsers %}
                    <option value="{{ user.id }}">{{ user.email }}</option>
                {% endfor %}
            </select>
            <button type="submit">Отправить</button>
        </div>
    </div>
</form>

{% endblock %}
