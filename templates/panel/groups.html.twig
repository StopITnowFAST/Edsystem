{% extends 'base.html.twig' %}

{% block title %}Группы студентов{% endblock %}

{% block body %}

<div>
    <a href="{{ path('app_panel') }}">Вернуться в панель</a>
</div>

<h1>Добавить группу</h1>

<!-- Форма для добавления группы -->
<div>
    <form method="post" action="{{ path('add_group') }}">
        <div>
            <label for="name">Название группы:</label>
            <input type="text" id="name" name="name" required>
            <label for="code">Код группы:</label>
            <input type="text" id="code" name="code" required>
            <label for="description">Описание:</label>
            <textarea id="description" name="description" required></textarea>
            <button type="submit">Добавить группу</button>
        </div>
    </form>
</div>

<h1>Текущие группы</h1>

<div>
    <table>
        <thead>
            <tr>
                <th>Название</th>
                <th>Код</th>
                <th>Описание</th>
                <th>Статус</th>
                <th>Студенты</th>
                <th>Расписание</th>
            </tr>
        </thead>
        <tbody>
            {% for group in groups %}
            <tr>
                <td>{{ group.name }}</td>
                <td>{{ group.code }}</td>
                <td>{{ group.description }}</td>
                <td>{{ group.group_status == 1 ? 'Активна' : 'Неактивна' }}</td>
                <td>
                    <button data-group-id="{{ group.id }}">
                        Показать студентов
                    </button>
                </td>
                <td>
                    <form action="{{ path('edit_schedule', { 'id': group.id }) }}" method="POST">
                        <input type="hidden" name="group_id" value="{{ group.id }}">
                        <button type="submit">
                            Редактировать расписание
                        </button>
                    </form>
                </td>
            </tr>
            <tr id="students-group-{{ group.id }}" style="display: none;">
                <td colspan="6">
                    <ul>
                        {% if group.students is not empty %}
                            {% for student in group.students %}
                            <li>{{ student.first_name }} {{ student.last_name }}</li>
                            {% endfor %}
                        {% else %}
                            <li>Студенты отсутствуют.</li>
                        {% endif %}
                    </ul>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>



<script>
    document.addEventListener('DOMContentLoaded', function () {
        const toggleButtons = document.querySelectorAll('.toggle-students');
        toggleButtons.forEach(button => {
            button.addEventListener('click', function () {
                const groupId = this.dataset.groupId;
                const studentRow = document.getElementById('students-group-' + groupId);
                if (studentRow.style.display === 'none') {
                    studentRow.style.display = 'table-row';
                    this.textContent = 'Скрыть студентов';
                } else {
                    studentRow.style.display = 'none';
                    this.textContent = 'Показать студентов';
                }
            });
        });
    });
</script>

{% endblock %}
