{% extends 'base.html.twig' %}

{% set title = "Аудитории" %}

{% block title %}{{ title }} | {{ app_title }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/styles/admin_tables.css') }}">
    <link rel="stylesheet" href="{{ asset('/styles/pagination.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        {{ include('blocks/breadcrumbs.html.twig') }}
        <div class="admin-table__wrap">
            <h1>{{ title }}</h1>
            <div class="admin-table__head">
                <div class="admin-table__buttons">
                <a href="{{ path('admin_create_schedule_classroom') }}" class="btn btn-primary">Добавить аудиторию</a>
                </div>
            </div>
            <div class="admin-table__body">
                <table class="admin-table__table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Аудитория</th>
                            <th>Описание</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for note in notes %}
                            <tr>
                                <td>{{ note.id }}</td>
                                <td>{{ note.name }}</td>
                                <td>{{ note.classroom_type }}</td>
                                {{ include('blocks/action_cell.html.twig', {
                                    'delete_path': path('admin_delete_note', {'id': note.id, 'type': 'schedule_classrooms'}),
                                    'change_path': path('admin_update_note', {'id': note.id, 'type': 'schedule_classrooms'}),
                                }) }}
                        {% endfor %}
                    </tbody>
                </table>    
            </div>
        </div>     
    </div>
    {% include('blocks/pagination.html.twig') %}
{% endblock %}

{% block javascripts %}
{% endblock %}