{% extends 'base.html.twig' %}

{% block title %}Панель доступа | {{ app_title }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/styles/admin_tables.css') }}">
    <link rel="stylesheet" href="{{ asset('/styles/pagination.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        {{ include('blocks/breadcrumbs.html.twig') }}
        <div class="admin-table__wrap">
            <div class="admin-table__head">
                <h1>Панель доступа</h1>
                <div class="admin-table__buttons">
                
                </div>
            </div>
            <div class="admin-table__body">
                <table class="admin-table__table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Эл. почта</th>
                            <th>Модератор</th>
                            <th>Преподаватель</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in notes %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.email }}</td>
                                <td><input type="checkbox" class="role-checkbox" data-role="ROLE_MODERATOR" value="{{ user.id }}"
                                        {% if "ROLE_MODERATOR" in user.roles %}checked{% endif %} />
                                    <label>Модератор</label>
                                </td>
                                <td><input type="checkbox" class="role-checkbox" data-role="ROLE_TEACHER" value="{{ user.id }}"
                                        {% if "ROLE_ADMIN" in user.roles %}checked{% endif %} />
                                    <label>Преподаватель</label>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>    
            </div>
        </div>     
    </div>
    {% include('blocks/pagination.html.twig') %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('/js/admin_moderators.js') }}"></script>
{% endblock %}