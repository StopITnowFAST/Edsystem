{% extends 'base.html.twig' %}

{% block title %}Группы | {{ app_title }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/styles/admin_tables.css') }}">
    <link rel="stylesheet" href="{{ asset('/styles/pagination.css') }}">
    <link rel="stylesheet" href="{{ asset('/styles/popup.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="admin-table__wrap">
            <div class="admin-table__head">
                <h1>Группы</h1>
                <div class="admin-table__buttons">
                    <button class="btn btn-primary" onclick="openPopup()">Добавить группу</button>
                </div>
            </div>
            <div class="admin-table__body">
                <table class="admin-table__table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Название</th>
                            <th>Код</th>
                            <th>Год</th>
                            <th>Семестр</th>
                            <th>Курс</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for note in notes %}
                            <tr>
                                <td>{{ note.id }}</td>
                                <td>{{ note.name }}</td>
                                <td>{{ note.code }}</td>
                                <td>{{ note.year }}</td>
                                <td>{{ note.semester }}</td>
                                <td>{{ note.course }}</td>
                                <td>
                                    <a href={{ path('admin_group', {id: note.id}) }}>Редактировать</a></td>
                                </tr>
                        {% endfor %}
                    </tbody>
                </table>    
            </div>
        </div>     
    </div>
    <div class="overlay"></div>
    {% include('blocks/pagination.html.twig') %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('/js/admin_groups.js') }}"></script>
{% endblock %}