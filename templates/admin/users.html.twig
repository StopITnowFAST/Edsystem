{% extends 'base.html.twig' %}

{% block title %}Пользователи | Интеллектуальный чат Энергомера{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/styles/users.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="users__wrap">
            <div class="users__head">
                <div class="users__buttons">
                
                </div>
            </div>
            <div class="users__body">
                <table class="users__table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Эл. почта</th>
                            <th>Роль</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in tableData %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.email }}</td>
                                <td><input type="checkbox" value="{{ user.id }}"
                                    {% if "ROLE_MODERATOR" in user.roles %}
                                        checked
                                    {% endif %} />
                                    <label>Модератор</label>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>    
            </div>
        </div>     
    </div>          
{% endblock %}

{% block javascripts %}
{% endblock %}