{% extends 'base.html.twig' %}

{% block title %}Студенты | {{ app_title }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/styles/admin_tables.css') }}">
    <link rel="stylesheet" href="{{ asset('/styles/pagination.css') }}">
    <link rel="stylesheet" href="{{ asset('/styles/popup.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="admin-table__wrap">
            <div class="admin-table__head">
                <h1>Студенты</h1>
                <div class="admin-table__buttons">
                    <a href="{{ path('admin_create_student') }}" class="btn btn-primary">Добавить студента</a>
                </div>
            </div>
            <div class="admin-table__body">
                <table class="admin-table__table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Фамилия</th>
                            <th>Имя</th>
                            <th>Отчество</th>
                            <th>Группа</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for note in notes %}
                            <tr>
                                <td>{{ note.id }}</td>
                                <td>{{ note.first_name }}</td>
                                <td>{{ note.middle_name }}</td>
                                <td>{{ note.last_name }}</td>
                                <td>{{ note.code }}</td>
                                {{ include('blocks/action_cell.html.twig', {
                                    'delete_path': path('admin_delete_note', {'id': note.id, 'type': 'students'}),
                                    'change_path': path('admin_update_note', {'id': note.id, 'type': 'students'}),
                                }) }}
                                </tr>
                        {% endfor %}
                    </tbody>
                </table>    
            </div>
        </div>     
    </div>
    <div class="overlay"></div>
    {% include('blocks/pagination.html.twig') %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('/js/admin_students.js') }}"></script>
{% endblock %}