{% extends 'base.html.twig' %}

{% block title %}Преподаватели | Интеллектуальный чат Энергомера{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/styles/teachers.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="teachers__wrap">
            <div class="teachers__head">
                <div class="teachers__buttons">
                
                </div>
            </div>
            <div class="teachers__body">
                <table class="teachers__table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Фамилия</th>
                            <th>Имя</th>
                            <th>Отчество</th>
                            <th>Должность</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for note in tableData %}
                            <tr>
                                <td>{{ note.id }}</td>
                                <td>{{ note.lastName }}</td>
                                <td>{{ note.firstName }}</td>
                                <td>{{ note.middleName }}</td>
                                <td>{{ note.position }}</td>
                                <td>Группа</td>
                                <td>Редактировать</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>    
            </div>
        </div>     
    </div>          
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('/js/changeRole.js') }}"></script>
{% endblock %}