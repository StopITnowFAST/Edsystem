{% extends 'base.html.twig' %}

{% block title %}Преподаватели | {{ app_title }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/styles/admin_tables.css') }}">
    <link rel="stylesheet" href="{{ asset('/styles/pagination.css') }}">
    <link rel="stylesheet" href="{{ asset('/styles/popup.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="admin-table__wrap">
            <div class="admin-table__head">
                <h1>Преподаватели</h1>
                <div class="admin-table__buttons">
                    <button class="btn btn-primary" onclick="openPopup()">Добавить преподавателя</button>
                </div>
            </div>
            <div class="admin-table__body">
                <table class="admin-table__table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Фамилия</th>
                            <th>Имя</th>
                            <th>Отчество</th>
                            <th>Должность</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for note in notes %}
                            <tr>
                                <td>{{ note.id }}</td>
                                <td>{{ note.last_name }}</td>
                                <td>{{ note.first_name }}</td>
                                <td>{{ note.middle_name }}</td>
                                <td>{{ note.position }}</td>
                                <td>
                                    <a href={{ path('admin_user', {id: note.id}) }}>Редактировать</a></td>
                                </tr>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>    
            </div>
        </div>     
    </div>          
    <div class="overlay"></div>
    {% include('blocks/pagination.html.twig') %}
    {% include('admin/popup/popup_add_teacher.html.twig') %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('/js/admin_teachers.js') }}"></script>
{% endblock %}