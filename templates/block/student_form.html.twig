<div class="add-group-container">
    <form method="post" action="{{ path('add_student') }}" class="add-group-form">
        <div class="form-row">
                <label for="last_name">Фамилия:</label>
                <input type="text" id="last_name" name="last_name" class="form-control" required>
                <label for="first_name">Имя:</label>
                <input type="text" id="first_name" name="first_name" class="form-control" required>
                <label for="middle_name">Отчество:</label>
                <input type="text" id="middle_name" name="middle_name" class="form-control" required>
                <label for="birthday_date">Дата рождения:</label>
                <input type="date" id="birthday_date" name="birthday_date" class="form-control" required>
                <label for="group_id">Группа:</label>
                <select id="group_id" name="group_id" class="form-control" required>
                    <option value="" disabled selected>Выберите группу</option>
                    {% for group in groups %}
                        <option value="{{ group.id }}">{{ group.name }}</option>
                    {% endfor %}
                </select>

                <button type="submit" class="btn">Добавить</button>
        </div>
    </form>
</div>
