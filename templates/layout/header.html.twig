<header class="header">
    <div class="container">
        <div class="logo">
            <a href="{{ path('app_main') }}">
                <img src="/images/logo.png" alt="Логотип" id="site-logo">
            </a>
        </div>

        <div class="button-container">
            {% if is_granted('ROLE_TEACHER') %}
                <a href="{{ path('app_panel') }}" class="btn">Панель учителя</a>
            {% endif %}
            <div class="user-menu">            
                <button class="btn menu-toggle">Меню</button>
                <ul class="dropdown">
                    {% if app.user %}
                        <li><a href="{{ path('app_account') }}" class="dropdown-link">Аккаунт</a></li>
                        <li><a href="{{ path('app_logout') }}" class="dropdown-link">Выйти</a></li>
                    {% else %}
                        <li><a href="{{ path('app_register') }}" class="dropdown-link">Регистрация</a></li>
                        <li><a href="{{ path('app_login') }}" class="dropdown-link">Войти</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
</header>
